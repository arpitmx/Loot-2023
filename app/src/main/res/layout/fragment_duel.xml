<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/space_transparent"
    tools:context="com.example.dell.loot.Missions">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/gilroy_extrabold"
        android:text="Duel Mode"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="144dp"
            android:layout_height="66dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:background="@drawable/card_background_red"
            android:gravity="center">

            <TextView
                android:layout_width="68dp"
                android:layout_height="21dp"
                android:fontFamily="@font/gilroy_extrabold"
                android:text="WON"
                android:textColor="@color/space_white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/won"
                android:layout_width="30dp"
                android:layout_height="21dp"
                android:fontFamily="@font/gilroy_extrabold"
                android:text="15"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="144dp"
            android:layout_height="66dp"
            android:background="@drawable/card_background_red"

            android:gravity="center">

            <TextView
                android:layout_width="68dp"
                android:layout_height="21dp"
                android:fontFamily="@font/gilroy_extrabold"
                android:text="LOST"
                android:textColor="@color/space_white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lost"
                android:layout_width="30dp"
                android:layout_height="21dp"
                android:fontFamily="@font/gilroy_extrabold"
                android:text="22"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/dan_xxhdpi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/mission_desc"
        android:layout_width="230dp"
        android:layout_height="162dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="196dp"
        android:background="@drawable/d_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.255">


        <TextView
            android:id="@+id/dan_msg"
            android:layout_width="119dp"
            android:layout_height="70dp"
            android:layout_marginBottom="79.52dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="46dp"
            android:fontFamily="@font/gilroy_bold"
            android:text="Ready To Loot?"
            android:textColor="@color/black_overlay"
            android:textSize="24sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/loot"
        android:layout_width="104dp"
        android:layout_height="52dp"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/card_background_yellow"
        android:scaleType="fitXY"
        android:src="@drawable/loot_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mission_desc" />


</android.support.constraint.ConstraintLayout>
