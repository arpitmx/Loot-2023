<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_gradient_bg"
    tools:context="com.hackncs.zealicon.loot.Login">




    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/imageFilterView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/squidgames_pos"
        android:background="@color/darkGrey70"
        android:scaleType="fitCenter"

        />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background_grey"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/popinsemibold"
                android:gravity="start"
                android:text="Create an account"
                android:textColor="@color/white"
                android:textSize="26sp"
                app:layout_constraintBottom_toTopOf="@+id/scrollView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_background_white"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"

                android:drawableTint="@color/darkGrey70"
                android:ems="10"
                android:textCursorDrawable="@null"
                android:fontFamily="@font/popinregular"
                android:gravity="center_vertical"
                android:hint="Name"
                android:inputType="text"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:textColor="@color/darkGrey"
                android:textColorHint="@color/darkGrey70"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_background_white"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawablePadding="10dp"
                android:textCursorDrawable="@null"

                android:drawableTint="@color/darkGrey70"
                android:ems="10"
                android:fontFamily="@font/popinregular"
                android:gravity="center_vertical"
                android:hint="Email"

                android:inputType="textEmailAddress"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:textColor="@color/darkGrey"
                android:textColorHint="@color/darkGrey70"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/zealId"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_background_white"
                android:drawableStart="@drawable/ic_baseline_menu_book_24"
                android:textCursorDrawable="@null"

                android:drawablePadding="10dp"
                android:drawableTint="@color/darkGrey70"
                android:ems="10"
                android:fontFamily="@font/popinregular"
                android:hint="Admission No."
                android:inputType="text"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:textColor="@color/darkGrey"
                android:textColorHint="@color/darkGrey70"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/contactNumber"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_background_white"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:textCursorDrawable="@null"


                android:drawablePadding="10dp"
                android:drawableTint="@color/darkGrey70"
                android:ems="10"
                android:fontFamily="@font/popinregular"
                android:hint="Phone"
                android:inputType="phone"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:textColor="@color/darkGrey"
                android:textColorHint="@color/darkGrey70"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:textCursorDrawable="@null"

                android:layout_marginBottom="8dp"
                android:background="@drawable/card_background_white"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/darkGrey70"

                android:ems="10"
                android:fontFamily="@font/popinregular"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:textColor="@color/darkGrey"


                android:textColorHint="@color/darkGrey70"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/card_background_white"
                android:drawableStart="@drawable/ic_baseline_verified_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/darkGrey70"
                android:ems="10"
                android:textCursorDrawable="@null"

                android:fontFamily="@font/popinregular"
                android:hint="Nickname"
                android:inputType="textAutoComplete"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:textColor="@color/darkGrey"

                android:textColorHint="@color/darkGrey70"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/avatar_1"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/avatar_1" />

                    <ImageView
                        android:id="@+id/tick_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/shape_1"
                        android:tint="@color/redCard"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/avatar_2"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/avatar_2" />

                    <ImageView
                        android:id="@+id/tick_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:tint="@color/redCard"

                        android:layout_centerInParent="true"
                        android:src="@drawable/shape_1"

                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/avatar_3"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/avatar_3" />

                    <ImageView
                        android:id="@+id/tick_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:tint="@color/redCard"

                        android:layout_centerInParent="true"
                        android:src="@drawable/shape_1"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/avatar_4"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/avatar_4" />

                    <ImageView
                        android:id="@+id/tick_4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/shape_1"
                        android:tint="@color/redCard"

                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/avatar_5"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/avatar_5" />

                    <ImageView
                        android:id="@+id/tick_5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:tint="@color/redCard"

                        android:layout_centerInParent="true"
                        android:src="@drawable/shape_1"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/avatar_6"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/avatar_6" />

                    <ImageView
                        android:id="@+id/tick_6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:tint="@color/redCard"

                        android:layout_centerInParent="true"
                        android:src="@drawable/shape_1"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/card_background_yellow"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:fontFamily="@font/popinsemibold"
                android:text="LET'S GET STARTED"
                android:textAllCaps="false"
                android:textColor="@color/white30"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
