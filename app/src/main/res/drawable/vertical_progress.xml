<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp"/>
            <solid android:color="@color/space_transparent" />
            <stroke android:color="@color/space_white" android:width="8dp"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <layer-list>
            <item>
                <clip
                   >
                    <shape>
                        <corners android:radius="8dp"/>
                        <solid android:color="@color/space_white" />
                        <stroke android:color="@color/space_transparent" android:width="8dp"/>
                    </shape>
                </clip>
            </item>
        </layer-list>
    </item>

</layer-list>